<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>WPI Suite Temp Admin Console</title>

<script type="text/javascript" >

function showUser()
{
	 getUser(document.getElementById("showid").value);
}
function display(text)
{
	document.getElementById("display").value = text;
}

function addUser()
{
	User = new Object();
	User.name = document.getElementById("name").value;
	User.idNum = document.getElementById("id").value;
	putUser(JSON.stringify(User));
	//getUser(User.idNum);
}


function getUser(user)
{
	var request = new XMLHttpRequest();
	request.onreadystatechange = function() 
	    {
		    if(request.readyState == 4 && request.status == 200) 
		    {
		        display(request.responseText);
		    }
	    }
    request.open('GET', "API/user/"+user, true);
    request.send();
}

function putUser(user)
{
    var request = new XMLHttpRequest();
    request.open('PUT', "API/user/", true);
    request.send(user);
}
</script>

</head>
<body>
<h1>WPI Suite Temporary Admin Console</h1>
<br />

        <section>            
            <label>Name: </label><input id="name" maxlength="40" /> <br />
            <label>ID: </label><input id="id" maxlength="15" /> <br />
            <button onclick="addUser()">Add User</button>
            
            <br />
           
            <button onclick="showUser()">Show User</button><label> ID: </label><input id="showid" maxlength="15" /> <br />
            <textarea id="display" rows="10" cols="80"></textarea>

        </section>

</body>
</html>