<title>WPI Suite Temp Admin Console</title>

<script type="text/javascript">

//uses AJAX to get all the entries in the DB
function getUser(user)
{
	var request = new XMLHttpRequest();
	request.onreadystatechange = function() 
	    {
		    if(request.readyState == 4 && request.status == 200) 
		    {
		        display(request.responseText)
		    }
	    }
    request.open('GET', "/API/user/"+user, true);
    request.send();
}

//uses AJAX to submit a new recipe to the server in JSON format
function putUser(user)
{
    var request = new XMLHttpRequest();
    request.open('PUT', "/API/user/", true);
    request.send(user);
}
</script>

